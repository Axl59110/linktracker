APP_NAME="Link Tracker"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://linktracker.test

# ⚠️ IMPORTANT : Ne PAS définir ces variables vides !
# Elles causent des erreurs "Permission denied" avec Laravel + OneDrive
# Si elles existent dans votre .env, commentez-les ou supprimez-les
# APP_SERVICES_CACHE=
# APP_PACKAGES_CACHE=
# APP_CONFIG_CACHE=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données - SQLite (Recommandé pour développement)
DB_CONNECTION=sqlite

# Base de données - PostgreSQL (Pour production)
# Décommenter et configurer ces lignes pour utiliser PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=linktracker
# DB_USERNAME=linktracker_user
# DB_PASSWORD=votre_mot_de_passe_securise

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=linktracker.test

# Laravel Sanctum - SPA Authentication
SANCTUM_STATEFUL_DOMAINS=linktracker.test,localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
FRONTEND_URL=http://linktracker.test

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_API_URL=http://linktracker.test
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Laravel Telescope (Debugging)
# En production, définir TELESCOPE_ENABLED=false
TELESCOPE_ENABLED=true
